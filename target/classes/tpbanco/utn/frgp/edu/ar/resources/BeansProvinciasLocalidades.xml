<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd">
  
  <!-- LOCALIDADES -->
    
   <bean id="LocalidadCABAPalermo" class="utn.frgp.edu.ar.entidad.Localidades">
       <property name="descripcion" value="Palermo"></property>
       <property name="codPostal" value="7112"></property>
   </bean>
    <bean id="LocalidadCABABelgrano" class="utn.frgp.edu.ar.entidad.Localidades">
     <property name="descripcion" value="Belgrano"></property>
       <property name="codPostal" value="7103"></property>
   </bean>
  
     <bean id="LocalidadBuenosAiresCostaAzul" class="utn.frgp.edu.ar.entidad.Localidades">
       <property name="descripcion" value="Costa Azul"></property>
       <property name="codPostal" value="7102"></property>
   </bean>
    <bean id="LocalidadBuenosAiresFaroSanAntonio" class="utn.frgp.edu.ar.entidad.Localidades">
     <property name="descripcion" value="Faro San Antonio"></property>
       <property name="codPostal" value="7113"></property>
   </bean>
  
  
  
  <!--  PROVINCIAS CON LISTA DE LOCALIDADES--> 
  
   <bean id="ProvinciaCABA" class="utn.frgp.edu.ar.entidad.Provincias">
    <property name="descripcion" value="CABA"></property>
    <property name="listaLocalidades">
    	<list>
    		<ref bean="LocalidadCABAPalermo"/>
    		<ref bean="LocalidadCABABelgrano"/>
   		</list>
    </property>   
   </bean>
   
   
   
   <bean id="ProvinciaBuenosAires" class="utn.frgp.edu.ar.entidad.Provincias">
    <property name="descripcion" value="Buenos Aires"></property>
    <property name="listaLocalidades">
   		 <list>
    		<ref bean="LocalidadBuenosAiresCostaAzul"/>
    		<ref bean="LocalidadBuenosAiresFaroSanAntonio"/>
   		</list>
    </property>   
   </bean>
   
   
   
